@{
    ViewData["Title"] = "Contact".ToUpper();
}
@model EmailMessage

<partial name="Nav"/>

<section class="contact-form mt-5" style="background-color: #2b3e50;">
    <div class="container mt-4 mb-5">
        <h1 class="display-4 text-primary text-center">CONTACT ME</h1>
        <span class="mb-4" style="margin: auto; width: 20%; border: 2px solid #abb6c2; display: block;"></span>
        <h5 class=" text-center mb-5">Send me a message from here.</h5>
        <div class="validation-container text-center">
            <span class=""></span>
            <span class="name text-danger" asp-validation-for="Name"></span><br>
            <span class="subject text-danger" asp-validation-for="Subject"></span><br>
            <span class="email text-danger" asp-validation-for="FromEmail"></span><br>
            <span class="message text-danger" asp-validation-for="Message"></span><br>
            <span class="phone text-danger" asp-validation-for="PhoneNumber"></span>
        </div>
        <form id="contact-form" class="p-4 shadow border border-secondary">
            <div class="form-row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p-2 mb-3">
                    <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Enter name">
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p-2 mb-3">
                    <input asp-for="Subject" type="text" class="form-control" id="Subject" placeholder="Enter subject">
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p-2 mb-3">
                    <input asp-for="FromEmail" type="email" class="form-control" id="FromEmail" placeholder="Enter email">
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 p-2 mb-3">
                    <input asp-for="PhoneNumber" type="text" class="form-control" id="PhoneNumber" placeholder="Enter phone number">
                </div>
            </div>
            <div class="form-row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 p-2 mb-3">
                    <textarea asp-for="Message" type="text" class="form-control" name="Message" id="Message" rows="7"></textarea>
                </div>
            </div>
            <div class="form-group row mt-4">
                <div class="col text-center">
                    <button id="contact-btn" class="btn btn-primary btn-lg" style="width: 100%">Submit</button>
                </div>
            </div>
        </form>
    </div>
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalCenterTitle">Message</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <p>Hello <span class="sender-name"></span>,</p>
            <p>Your message has be received. I will reply asap.</p>
            <p>thank-you</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
    </div>
</section>

<section class="other-section-contact">
    <div class="other-section-overlay"></div>
    <div class="container mb-5">
        <div class="row mt-4">
            <div class="col-lg-12 col-md-12 col-sm-12 mb-5">
                <h1 class="display-4 text-center text-primary mt-3" >ALTS</h1>
                <span class="mb-2" style="margin: auto; width: 20%; border: 2px solid #abb6c2; display: block;"></span>
