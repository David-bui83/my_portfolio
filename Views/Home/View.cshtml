@{
  ViewData["Title"] = "View Project"; 
}

<partial name="ViewNav"/>

<section class="section-view-project-heading mt-3" >
  <div class="container mt-4 mb-4" style="position: relative;">
    <div class="text-right">
      <h6><a class="back-link" asp-controller="Home" asp-action="Project"><i class="fas fa-arrow-left"></i> Projects</a></h6>
    </div>
    <h1 class="text-primary text-center mb-3">@(Model == null ? String.Empty : Model.ProjectName.ToUpper())</h1>
    <span class="mb-5" style="margin: auto; width: 20%; border: 2px solid #abb6c2; display: block;"></span>
    <div class="row">
      <div class="project-image-container p-3" style="width: 100%;">
        <img src="~/@(Model == null ? String.Empty : Model.ProjectImage)" alt="@(Model == null ? String.Empty : Model.ProjectName)" style="width: 100%; display: block;">
      </div>
    </div>
  </div>
</section>

<section class="section-view-project-description bg-dark">
  <div class="container mt-4 mb-4 text-center">
    <h3 class="text-primary">DESCRIPTION</h3>
    <div class="mt-3" data-aos="fade-left">
      <p class="text-muted">@(Model == null ? String.Empty : Model.ProjectDescription)</p>

    </div>
  </div>
</section>

<section class="section-view-project-feature">
  <div class="container mt-4 mb-4 text-center">
    <h3 class="text-primary">FEATURE</h3>
    <p class="text-muted">Details on information on features that go into site</p>
    <div class="project-table-container mt-3" data-aos="fade-right">
      <table class="table table-striped table-dark table-borderless text-left">
        <thead>
          <tr class="text-info">
            <th>Feature</th>
            <th>Detail</th>
          </tr>
        </thead>
        <tbody>
          @{
            foreach(var detail in ViewBag.details)
            {
              <tr>
                <th>@(detail == null ? String.Empty : detail.DetailName)</th>
                <td class="text-muted">@(detail == null ? String.Empty : detail.DetailDetail)</td>
              </tr>
            }
          }
        </tbody>
      </table>
    </div>
  </div>
</section>

<section class="section-view-project-technology bg-dark">
  <div class="container mt-4 mb-4 text-center">
    <h3 class="text-primary">TECHNOLOGY</h3>
    <p class="text-muted">Technologies used in Building the site</p>
    <div class="icons-container mt-3" data-aos="fade-up">     
        @{
            foreach(var tech in ViewBag.techs)
            {
                <div style="width: 50px; display: inline-block">
                    <img class="p-2 tech-icon" src="~/@(tech == null ? String.Empty : tech.TechnologyImage)" alt="@(tech == null ? String.Empty : tech.TechnologyName)" style="width: 100%;">
                </div>
            }
        } 
    </div>
  </div>
</section>

<section class="section-view-project-links">
  <div class="container mt-4 mb-4 text-center">
    <h3 class="text-primary">Links</h3>
    <p class="text-muted">Check out the project here</p>
    <div class="row view-links-container" data-aos="fade-in">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-1 mt-3 mb-3">
        <article>
          <div>
              <i class="fab fa-github fa-3x text-info mb-2"></i>
          </div>
          <head>
              <span class="text-info"><a class="text-white text-decoration-none" href="@(Model == null ? String.Empty : Model.ProjectGitHub)" target="blank"><span style="font-size: 1.2rem"><i class="fas fa-link"></i> - GitHub</span></a></span>
          </head>
        </article>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-1 mb-3 mt-3">
        <article>
          <div>
              <i class="fas fa-window-maximize fa-3x text-info mb-2"></i>
          </div>
          <head>
              <span class="text-info"><a class="text-white text-decoration-none" href="@(Model == null ? String.Empty : Model.ProjectLink)" target="blank"><span style="font-size: 1.2rem"><i class="fas fa-link"></i> - Site</span></a></span>
          </head>
        </article>
      </div>
    </div>
  </div>
</section>
<partial name="footer"/>


