@model User
<div class="container p-3 border shadow text-muted">
  <h3 class="text-primary">Register</h3>
  <hr class="my-4 bg-primary">
  <div style="width: 100%;">
    <form asp-controller="Admin" asp-action="Register" method="POST">
      <span class="text-danger" asp-validation-for="FirstName"></span>
      <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" type="text" class="form-control" id="FirstName" name="FirstName" placeholder="Enter first name">
      </div>
      <span class="text-danger" asp-validation-for="LastName"></span>
      <div class="form-group">
        <label asp-for="LastName">Last name</label>
        <input asp-for="LastName" type="text" class="form-control" id="LastName" name="LastName" placeholder="Enter last name">
      </div>
      <span class="text-danger" asp-validation-for="UserName"></span>
      <div class="form-group">
        <label asp-for="UserName">User name</label>
        <input asp-for="UserName" type="text" class="form-control" id="UserName" name="UserName" placeholder="Enter last name">
      </div>
      <span class="text-danger" asp-validation-for="Email"></span>
      <div class="form-group">
        <label asp-for="Email">Email address</label>
        <input asp-for="Email" type="email" class="form-control" id="Email" name="Email" placeholder="Enter email">
      </div>
      <span class="text-danger" asp-validation-for="Password"></span>
      <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="Password" name="Password" placeholder="Enter password">
      </div>
      <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
      <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm password">
      </div>
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </div>
</div>