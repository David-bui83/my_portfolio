@{
  ViewData["Title"] = "password recovery".ToUpper();
}

@model RecoveryModel
<section class="section-password-recovery mt-5">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1 class="display-4 text-primary text-center">@ViewData["Title"]</h1>
        <span class="mb-4" style="margin: auto; width: 20%; border: 2px solid #abb6c2; display: block;"></span>
        <div class="recovery-form-container p-3 mt-5">
          <form asp-action="PasswordRecovery" asp-controller="Admin" method="POST">
            <span class="text-danger" asp-validation-for="RecoveryUserName"></span>
            <div class="form-group">
              <input asp-for="RecoveryUserName" type="text" class="form-control" id="RecoveryUserName" aria-describedby="RecoveryUserName" placeholder="Enter username">
              <small id="emailHelp" class="form-text text-muted">Enter user name for password recovery</small>
            </div>
            <a class="btn btn-outline-secondary mr-2" asp-controller="Admin" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

