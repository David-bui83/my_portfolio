@{
  ViewData["Title"] = "Admin Access".ToUpper();
}

<partial name="Nav" />

<section class="section-login mt-5">
  <div class="container p-5">
    <div class="row">
      @{
        if(ViewBag.user < 1)
        {
          <div class="col">
            <partial name="Register" />
          </div>

        }else
        {
          <div class="col">
            <partial name="Login"/>
          </div>
        }
      }
    </div>
    <div class="row">
      <div class="col ml-2">
        <div class="mt-2">
          <a class="text-info" asp-action="PasswordRecovery" asp-controller="Admin">Forgot Password</a>
        </div>
      </div>
    </div>
  </div>
</section>
<partial name="footer"/>
