@{
  ViewData["Title"] ="Edit Project".ToUpper();
  User userEdit = ViewBag.userEdit;
  var projectEdit = ViewBag.projectEdit;
}

<section class="section-edit-project mt-5">
  <div class="container border shadow mb-5">
    <div class="row">
      <div class="col-lg-3 col-md-3 col-sm-12 p-2 border-right">
        <partial name="Sidebar" model="@userEdit"/>
      </div>
      <div class="col-lg-9 col-md-9 col-sm-12 p-3">
        <a class="text-secondary float-right" asp-controller="Admin" asp-action="Dashboard">Back</a>
        <h1 class="text-primary">@ViewData["Title"]</h1>
        <hr class="my-4 bg-white">
        @model ProjectViewModel
        <form enctype="multipart/form-data" class="p-3 border border-secondary text-muted" asp-controller="Admin" asp-action="UpdateProject" asp-route-id="@(projectEdit == null ? String.Empty : projectEdit.ProjectId)" method="POST">
          <span class="text-danger" asp-validation-for="ProjectName"></span>
          <div class="form-group">
            <label asp-for="ProjectName">Project Name</label>
            <input asp-for="ProjectName" type="text" class="form-control" id="ProjectName" name="ProjectName" placeholder="Enter project name" value="@(projectEdit == null ? String.Empty : projectEdit.ProjectName)">
          </div>
          <span class="text-danger" asp-validation-for="ProjectImage"></span>
          <div class="form-group">
            <label asp-for="ProjectImage">Project Image</label>
            <input asp-for="ProjectImage" type="file" class="form-control" id="ProjectImage" name="ProjectImage">
          </div>
          <span class="text-danger" asp-validation-for="ProjectDescription"></span>
          <div class="form-group">
            <label asp-for="ProjectDescription">Project Description</label>
            <textarea type="text" class="form-control" id="ProjectDescription" style="height: 250px;" name="ProjectDescription" placeholder="Enter description">@(projectEdit == null ? String.Empty : projectEdit.ProjectDescription)</textarea>
          </div>
          <span class="text-danger" asp-validation-for="ProjectLink"></span>
          <div class="form-group">
            <label asp-for="ProjectLink">Project Link</label>
            <input asp-for="ProjectLink" type="text" id="ProjectLink" name="ProjectLink" class="form-control" placeholder="Enter link" value="@(projectEdit == null ? String.Empty : projectEdit.ProjectLink)">
          </div>
          <div class="form-group">
            <label asp-for="ProjectGitHub">Github Link</label>
            <input asp-for="ProjectGitHub" type="text" id="ProjectGitHub" name="ProjectGitHub" class="form-control" placeholder="Enter link" value="@(projectEdit == null ? String.Empty : projectEdit.ProjectGitHub)">
          </div>
          <span class="text-danger" asp-validation-for="IsViewDone"></span>
          <div class="form-goup">
            @{
              @if(projectEdit.IsDone == false)
              {
                <label asp-for="IsViewDone">Not Done &nbsp;</label>
                <input asp-for="IsViewDone" type="radio" name="IsViewDone" value="false" checked="checked">
                <label asp-for="IsViewDone">&nbsp;&nbsp; Done &nbsp;</label>
                <input asp-for="IsViewDone" type="radio" name="IsViewDone" value="true">
              }
              else
              {
                <label asp-for="IsViewDone">Not Done &nbsp;</label>
                <input asp-for="IsViewDone" type="radio" name="IsViewDone" value="false">
                <label asp-for="IsViewDone">&nbsp;&nbsp; Done &nbsp;</label>
                <input asp-for="IsViewDone" type="radio" name="IsViewDone" value="true" checked="checked">
              }
            }
          </div>
          <br>

          <a class="btn btn-outline-secondary text-white mr-2" asp-controller="Admin" asp-action="Dashboard">Cancel</a>
          <button type="submit" class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
</section>